<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_album_back">


    <TextView
        android:id="@+id/topAlbum1"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="TextView"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.426" />

    <TextView
        android:id="@+id/topAlbum2"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="44dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="TextView"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/topAlbum1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/topAlbum1"
        app:layout_constraintTop_toBottomOf="@+id/topAlbum1" />

    <TextView
        android:id="@+id/topAlbum3"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="40dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="TextView"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/topAlbum2"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/topAlbum2"
        app:layout_constraintTop_toBottomOf="@+id/topAlbum2" />

    <TextView
        android:id="@+id/topAlbum4"
        android:layout_width="270dp"
        android:layout_height="51dp"
        android:layout_marginTop="36dp"
        android:fontFamily="@font/luckiest_guy"
        android:text="TextView"
        android:textSize="28sp"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/topAlbum3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/topAlbum3"
        app:layout_constraintTop_toBottomOf="@+id/topAlbum3" />

    <Button
        android:id="@+id/topAlbumNext"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="19dp"
        android:layout_marginBottom="668dp"
        android:background="@drawable/button_round"
        android:text="NEXT"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.989"
        app:layout_constraintStart_toEndOf="@+id/topAlbumBack" />

    <Button
        android:id="@+id/topAlbumBack"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginStart="12dp"
        android:layout_marginBottom="668dp"
        android:background="@drawable/button_round"
        android:text="Back"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
